@using Boonker.Data; 
@model UpdateViewModel;

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm("UpdateBook", "Books", FormMethod.Post))
{
<div class="form-check">
    <div class="form-group" style="color: white;">
        <label>Id</label>
        @Html.TextBoxFor(x => x.books.Id, new { @class = "form-control", @readonly = "true", @id = "exampleInputEmail1" })
    </div>
    <div class="form-group" style="color: white;">
        <label>Title</label>
        @Html.TextBoxFor(x => x.books.Title, new { @class = "form-control", @id = "exampleInputEmail1" })
    </div>
    <div class="col-form-label" style="color: white;">
        <label>Author</label>
        @Html.DropDownListFor(x => x.books.AuthorId, new SelectList(Model.Authors, "Value", "Text", Model.books.AuthorId), new {@class = "form-control", @id = "exampleInputEmail1" })
        <a href="https://localhost:44363/Author/CreateAuthor" class="btn btn-primary">Create New Author</a>
    </div>
    <div class="col-form-label" style="color: white;">
        <label>DSCR</label>
        @Html.TextAreaFor(x => x.books.DSCR, new { @class = "form-control", @id = "exampleInputEmail1" })
    </div>
    <div class="col-form-label" style="color: white;">
        <label>Price</label>
        @Html.TextBoxFor(x => x.books.Price, new { @class = "form-control", @id = "exampleInputEmail1" })
    </div>
    <div class="col-form-label" style="color: white; ">
        <label>Amount</label>
        @Html.TextBoxFor(x => x.books.Amount, new { @class = "form-control", @id = "exampleInputEmail1" })
    </div>
    <div class="col-form-label" style="color: white;">
        <label>Favorite</label>
        @Html.CheckBoxFor(x => x.books.IsFav, new { @class = "form-check-label", @id = "exampleInputEmail1" })
    </div>
    <div class="col-form-label" style="color: white;">
        <label>Image</label>
        @Html.TextBoxFor(x => x.books.Img, new { @class = "form-control", @id = "exampleInputEmail1" })
    </div>
    <div class="col-form-label" style="color: white;">
        <label>Category</label>
        @Html.DropDownListFor(n => n.books.CategoryId, new SelectList(Model.Categories, "Value", "Text", Model.CategoryId), new { @class = "form-control", @id = "exampleInputEmail1" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Update</button>
    </div>
</div>
}