<!-- ***** Featured Games Start ***** -->
<div class="row">
    <div class="col-lg-8">
        <div class="featured-games header-text">
            <div class="heading-section">
                <h4><em>Top 10</em> Books</h4>
            </div>
            <div class="owl-features owl-carousel">
                @{
                    foreach (var item in Model.RecBooks)
                    {
                        <div class="item">
                            <div class="thumb">
                                <a href="/Books/Book/@item.Id"><img src="~/files/books/@item.ImgEntry.Image1.ToString()" alt=""></a>
                                <div class="hover-effect">
                                    <h6>@item.Views</h6>
                                </div>
                            </div>
                            <h4>@item.Title<br><span>@item.Author.FirstName @item.Author.LastName</span></h4>
                            <ul>
                                <li><i class="fa fa-money-bill"></i>@item.Price.ToString("c")</li>
                                <li><i class="fa fa-sort-amount-desc"></i>@item.Amount</li>
                            </ul>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="top-downloaded">
            <style>
                div.top-downloaded {
                    overflow-y: scroll;
                }
            </style>
            <div class="heading-section">
                <h4><em>Top</em> Downloaded</h4>
            </div>
            <ul>
                @{ for (int item = 0; item < Model.AllCats.Count(); item++)
                    {
                        <li style=" height: 100%; margin: 0em; overflow-y: auto;">
                            @*<img src="~/assets/images/game-01.jpg" alt="" class="templatemo-item">*@
                            <h4>@Model.AllCats[item].Name</h4>
                            <h6>@Model.AllCats[item].DSCR</h6>
                            <span><i class="fa fa-eye" style="color: yellow;"></i>@Model.AllCats[item].CatViews</span>
                            <span><i class="fa fa-sort-amount-asc" style="color: #ec6090;"></i> @Model.CatAmount[item]</span>

                        </li>
                    } 
                }
            </ul>
            <div class="text-button">
                <a href="/Books/List">View All Categories</a>
            </div>
        </div>
    </div>
</div>
<!-- ***** Featured Games End ***** -->

